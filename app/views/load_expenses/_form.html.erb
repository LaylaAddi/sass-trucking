<%= simple_form_for [@load, @load_expense] do |f| %>
  <%= f.error_notification %> 

<div class="row">
  <div class="col-sm-6">
    <div class="form-group input-group">
      <span class="input-group-addon"><i class="fa fa-money"></i></span>
      <%= f.collection_select :vendor_profile_id, @vendor_profile.all.order(:company_name),
        :id, :company_name %>
        <%= f.input :business_name, label: false, placeholder: "Biz Name (if no vendor)" %>
      <%= f.input :expense_type, collection: Load::ExpenseType, label: false, placeholder: "Type" %>
      <%= f.input :amount, label: false, placeholder: "Amount" %>
      
    </div>
  </div>
  <div class="col-sm-6">
    <div class="form-group input-group">
      <span class="input-group-addon"><i class="fa fa-at"></i></span>
      <%= f.input :street, label: false, placeholder: "Street" %>
      <%= f.input :city, label: false, placeholder: "City" %>
      <%= f.input :state, label: false, placeholder: "State" %>
      <%= f.input :zip, label: false, placeholder: "zip" %>
    </div>
    <%= link_to "Add New Vendor", new_vendor_profile_path, class: "btn btn-success btn-sm round" %>
  </div>
  <%= f.button :submit, class: "btn btn-info btn-sm round" %>
</div>
<% end %>