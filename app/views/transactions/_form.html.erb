<%= simple_form_for(@transaction) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :week_pay %>
    <%= f.input :escrow_pay %>
    <%= f.input :trans_dec_1 %>
    <%= f.input :trans_dec_2 %>
    <%= f.input :trans_dec_3 %>
    <%= f.input :trans_int_1 %>
    <%= f.input :trans_int_2 %>
    <%= f.input :trans_str_1 %>
    <%= f.input :trans_str_2 %>
    <%= f.input :trans_str_3 %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
