<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

<div class="row">
  <div class="col-md-8 col-xs-offset-2 shadow">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="form-inputs">
          <div class="row">
            <div class="col-md-4">
              <%= f.input :first_name, required: true, autofocus: true %>
            </div>
            <div class="col-md-4">
              <%= f.input :last_name, required: true %>
            </div>
            <div class="col-md-4">
              <%= f.input :email, required: true %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-md-4">
              <%= f.input :cellphone %>  
            </div>
            <div class="col-md-4">
              <%= f.input :telephone %> 
            </div>
            <div class="col-md-4">
              <%= f.input :extention %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-md-3">
              <%= f.input :street %> 
            </div>
            <div class="col-md-3">
              <%= f.input :city %> 
            </div>
            <div class="col-md-3">
              <%= f.input :state, collection: ApplicationRecord::States %> 
            </div>
            <div class="col-md-3">
              <%= f.input :zip %> 
            </div>
          </div>
          <hr>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>
          <div class="row">
            <div class="col-md-4">
              <%= f.input :emergency_contact %> 
            </div>
            <div class="col-md-4">
              <%= f.input :emergency_contact_number%>  
            </div>
            <div class="col-md-4">
            </div>
          </div>
          <hr>
        </div>
        <div class="row">
          <div class="col-md-4">
            <%= f.input :password, label: "Password", autocomplete: "off" %>
          </div>
          <div class="col-md-4">
            <%= f.input :password_confirmation, label: "Confirm Password", 
              autocomplete: "off"%>
          </div>
          <div class="col-md-4">

          </div>
        </div>
        <div class="form-actions">
          <%= f.button :submit, class: "btn btn-primary btn-xs round" %>
          <br />
          <br />
          <%= link_to "Back", :back, class: "btn btn-info btn-xs round" %>
          <hr>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>



<%= render "devise/shared/links" %>
