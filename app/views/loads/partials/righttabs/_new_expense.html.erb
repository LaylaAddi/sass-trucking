
<%= simple_form_for [@load, LoadExpense.new] do |f| %>
<%= f.error_notification %> 
<div class="row">
  <div class="col-sm-6">
    <div class="form-group input-group">
      <span class="input-group-addon"><i class="fa fa-money"></i></span>
      <%= f.collection_select :vendor_profile_id, @vendor_profile.all.order(:company_name),
        :id, :company_name, include_blank: "Select Vendor"  %>
      <%= f.input :amount, label: false, placeholder: "Amount" %>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="form-group input-group">
      <span class="input-group-addon"><i class="fa fa-at"></i></span>
      <%= f.input :street, label: false, placeholder: "Street" %>
      <%= f.input :city, label: false, placeholder: "City" %>
      <%= f.input :state, collection: ApplicationRecord::States, 
        label: false, placeholder: "State" %>
      <%= f.input :zip, label: false, placeholder: "zip" %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-6">
    <div class="btn-group activity-actions">
      <button type="button" class="btn btn-xs btn-default dropdown-toggle" data-toggle="dropdown">
      <i class="fa fa-th"></i>
      <span class="sr-only">Toggle Dropdown</span>
      </button>
      <ul class="dropdown-menu dropdown-menu-right" role="menu">
        <li><%= link_to "Add New Vendor", new_vendor_profile_path %></li>
        <li><%= f.button :submit, class: "btn btn-link" %></li>
      </ul>
    </div>
  </div>
</div>
<% end %>