<%= simple_form_for(@company_profile_membership) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
          <%= f.collection_select :company_profile_id, @company_profiles.all.order(:company_name),
            :id, :company_name, include_blank: "Select Company"  %>  
          <%= f.collection_select :user_id, @users.all.order(:email),
            :id, :email, include_blank: "Select User" %>    
    <%= f.input :membership_type, collection: ApplicationRecord::CompanyProfileMembershipStatus %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>


