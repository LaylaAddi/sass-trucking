<p id="notice"><%= notice %></p>

<p>
  <strong>Notes:</strong>
  <%= @driver_statement.notes %>
</p>

<p>
  <strong>Payment Status:</strong>
  <%= @driver_statement.payment_status %>
</p>

<p>
  <strong>Payment Due:</strong>
  <%= @driver_statement.due_date.strftime("%A %B %-d, %Y") %>
</p>

<p>
  <strong>Updated On:</strong>
  <%= @driver_statement.updated_at.strftime("%A %B %-d, %Y") %>
</p>


<table class="table table-bordered table-striped table-condensed table-responsive">
	<thead>
		<tr>
      <th>ID</th>
      <th>Booked On</th>
      <th>Description</th>
      <th>Driver</th>
      <th>Rate</th>
      <th>Distance (Miles)</th>
      <th>Debits</th>
      <th>Credits</th>
      <th>Weight</th>
      <th>Load Size</th>

      <th>Trailer Type</th>
      <th>Status</th>
		</tr>
	</thead>

  <tbody> 
    <% debit_running_total = 0.00 %>
    <% credit_running_total = 0.00 %>
    <% expense_running_total = 0.00 %>
    <% hrc_load_running_total = 0.00 %>
    <% total_miles = 0 %>
    <% driver_load_running_total = 0.00 %>
    <% booking_fee_running_total = 0.00 %>
    <% @loads.each do |load| %>
    <tr>
      <td>
        <%= link_to load do %>
        <%= load.id %>
        <% end %>
      </td>
      <td><%= (load.created_at.strftime("%A %B %-d, %Y")) %></td> 
      <td>
        <%= link_to load do %>
        <%= load.load_title %> 
        <% end %>
      </td>
      <td>

        <%= link_to driver_user_path(load.driver_user_id) do %>
        <%= load.driver_user.full_name %>
        <% end %>
      <td><%= number_to_currency(load.rate_to_driver_after_factor_fees) %></td>
      <td><%= load.miles %> </td>
      </td>
      <td>
        <% load.transactions.each do |transaction| %>
        <%= number_to_currency(transaction.debit) %> 
        <% debit_running_total = debit_running_total + transaction.debit %>
        <% end %>
      </td>
      
      <td>
        <% load.transactions.each do |transaction| %>
        <%= number_to_currency(transaction.credit) %> 

        <% credit_running_total = credit_running_total + transaction.credit %>
        <% end %>
      </td>
       <td><%= load.weight %></td>
      <td><%= load.load_size %></td>




      <td><%= load.equipment_type %></td>
      <td><%= load.status_name %></td>

    </tr>
    <% hrc_load_running_total = hrc_load_running_total + load.invoice_price %> 
    <% booking_fee_running_total = booking_fee_running_total + load.booking_fee %> 
    <% driver_load_running_total = driver_load_running_total + load.rate_to_driver_after_factor_fees %> 
    <% total_miles = total_miles + load.miles %>
    <% end %>
  </tbody>
</table>
<br>
<% driver_net = driver_load_running_total - expense_running_total %>
<% hrc_net = hrc_load_running_total - driver_load_running_total %>
<% debit_total = debit_running_total - credit_running_total %>
<% rate_after_expenses = driver_load_running_total - debit_total%>
<br />
<br /> 
<table class="table table-bordered table-striped table-condensed table-responsive">
	<thead>
		<tr>
			<th>Insurance</th>
			<th>Trailer Rental</th>
			<th>Truck Rental</th>
			<th>Other</th>
			<th>Total</th>
		</tr>
	</thead>
	<tbody>
<% insurance_and_rentals = @driver_statement.insurance_payment + @driver_statement.trailer_rental + @driver_statement.truck_rental + @driver_statement.other %>
		<tr>
			<td><%= number_to_currency(@driver_statement.insurance_payment) %></td>
			<td><%= number_to_currency(@driver_statement.trailer_rental) %></td>
			<td><%= number_to_currency(@driver_statement.truck_rental) %></td>
			<td><%= number_to_currency(@driver_statement.other) %></td>
			<td><strong>- <%= number_to_currency(insurance_and_rentals) %></strong></td>

		</tr>
	</tbody>
</table>
<table class="table table-bordered table-striped table-condensed table-responsive">
	<thead>
		<tr>
			<th>Total Miles</th>
			<th>Gross $</th>
			<th>Debits</th>
			<th>Credits</th>
			<th>Debit/Credit Total</th>
			<th>Gross RPM</th>
			<th>Net RPM</th>
			<th>Net $</th>
		</tr>
	</thead>
<% net_after_otr_expense = driver_load_running_total - debit_total %>
	<tbody>
		<tr>
			<td><%= total_miles %></td>
			<td><%= number_to_currency(driver_load_running_total) %></td>
			<td><%= number_to_currency(debit_running_total) %></td>
			<td><%= number_to_currency(credit_running_total) %></td>
			<td>- <%= number_to_currency(debit_total) %></td>
			<td><%= number_to_currency(driver_load_running_total / total_miles) %></td>
			<td><%= number_to_currency(rate_after_expenses / total_miles) %></td>
			<td><%= number_to_currency(net_after_otr_expense) %></td>
		</tr>
	</tbody>
</table>
<div class="pull-right">
  <strong>
  Payment Due  <%= number_to_currency(net_after_otr_expense - insurance_and_rentals) %>
  </strong>  
</div>

<%= link_to "Statements", driver_user_driver_statements_path %>
