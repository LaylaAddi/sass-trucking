<table class="table table-bordered table-striped table-condensed table-responsive">
  <thead>
    <tr>
      <th>ID</th>
      <th>Description</th>


      <th>Commodity</th>
      <th>Weight</th>
      <th>Load size</th>
      <th>Expense</th> 


      <th>Rate</th>

      <th>Distance</th>
      <th>Pick up time</th>
      <th>Delivery time</th>
      <th>Equipment type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @completed_loads.each do |load| %>
      <tr>
        <td>
          <%= link_to load do %>
          <%= load.id %>
          <% end %>
        </td>
        <td>
          <%= link_to load do %>
          <%= load.load_title %> 
          <% end %>
        </td> 


        <td><%= load.commodity %></td>
        <td><%= load.weight %></td>
        <td><%= load.load_size %></td>
        <td>
          <% load.load_expenses.each do |le| %>
          <%= number_to_currency(le.amount) %>
          <% end %>
        </td>
        <td><%= number_to_currency(load.rate) %></td>
        <td><%= load.miles %></td>
        <td>
<%= (load.pick_up_date.strftime("%A %B %-d, %Y")) %>
@ <%= (load.pick_up_time.strftime("%-l:%M %p")) %> 
        </td>
        <td>
<%= (load.delivery_date.strftime("%A %B %-d, %Y")) %>
@ <%= (load.delivery_time.strftime("%-l:%M %p")) %>
        </td>
        <td><%= load.equipment_type %></td>
<td></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

