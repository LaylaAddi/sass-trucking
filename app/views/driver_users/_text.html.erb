<%= simple_form_for Message.new do |f| %> 
<%= f.input :number, input_html: { value:  '+1'+@driver.cellphone } %> 
<%= f.input :user, input_html: { value:  @hrc_user.full_name }, as: :hidden %>
<div id="message_text"> 
<%= f.text_area :text, rows: 2 %>
</div>
<br />
<% if !@message.nil? %>
<a href="<% link_to message_path(@message.number) %>" target="_blank">
<%= f.submit 'Send', :formtarget => "_blank" %>
</a>
<% end %>
<% if @message.nil? %>
<%= f.submit 'Send', :formtarget => "_blank" %>
<% end %>
<% end %>


<h1>Text History</h1>


<% @driver_number = @driver.cellphone %>
<%= @messages.each do |message| %>
<% if @driver_number == message.number %>

          <a href="#" class="btn-link text-semibold media-heading box-inline"> </a>
          <p class="text-muted text-sm"><i class="fa fa-mobile fa-lg"></i> 
          <%= message.sent_received %> 
          <% if message.inbound == false %> 
          by <%= message.user %>
          <% end %> 
          on <%= local_time(message.created_at, format: '%B %e, %Y %l:%M%P %Z') %> </p>

        <p><%= message.text %></p>
        <hr>

<% end %>
<% end %>

<% if @messages.inbound == false %>
<div class="ui card message">
  <div class="media-body">
    <div class="mar-btm">
      <div class="col-xs-8 col-xs-offset-2">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <a href="#" class="btn-link text-semibold media-heading box-inline"> </a>
            <p class="text-muted text-sm"><i class="fa fa-mobile fa-lg"></i> 
              <%= message.sent_received %> 
              by <%= message.user %>
              on <%= local_time(message.created_at, format: '%B %e, %Y %l:%M%P %Z') %> 
            </p>
          </div>
          <div class="panel-body">
            <p><%= message.text %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %> 
<% if message.inbound == true %>
<div class="ui card message">
  <div class="media-body">
    <div class="mar-btm">
      <div class="col-xs-8 col-xs-offset-2">
        <div class="panel panel-info">
          <div class="panel-heading">
            <a href="#" class="btn-link text-semibold media-heading box-inline"> </a>
            <p class="text-muted text-sm"><i class="fa fa-mobile fa-lg"></i> 
              <%= message.sent_received %> 
              on <%= local_time(message.created_at, format: '%B %e, %Y %l:%M%P %Z') %> 
            </p>
          </div>
          <div class="panel-body">
            <p><%= message.text %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>