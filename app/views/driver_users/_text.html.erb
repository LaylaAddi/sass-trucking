<%= simple_form_for Message.new do |f| %> 
<%= f.input :number, input_html: { value:  '+1'+@driver.cellphone } %> 
<%= f.input :user, input_html: { value:  @hrc_user.full_name }, as: :hidden %>


<div id="message_text"> 
<%= f.text_area :text, rows: 2 %>
</div>
<br />


<%= f.submit 'Send' %>

<% end %>


<h1>Text History</h1>



<% @messages.each do |message| %>
<% if @driver.cellphone == message.number.last(10) %>
