<%= simple_form_for [@load, @load_document] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :file_type, collection: ApplicationRecord::LoadDocumentType, 
    include_blank: true, placeholder: "Document Type" %> 
    <%= f.input :file %>
    <%= f.input :note %>
    <%= f.input :load_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
