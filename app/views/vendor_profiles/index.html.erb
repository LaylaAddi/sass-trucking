<p id="notice"><%= notice %></p>

<h2>Vendor Profiles<small> <%= link_to @company_profile.company_name, 
company_profile_path(@company_profile)%></small></h2> 

<table class="table table-bordered table-striped table-condensed table-responsive">
  <thead>
    <tr>
      <th>ID</th>
      <th>Date Added</th>
      <th>Vendor Name</th>
      <th>City</th>
      <th>State</th>
      <th>Telephone</th>
      <th>Contact name</th>
        <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vendor_profiles.each do |vendor_profile| %>
      <tr>
        <td><%= vendor_profile.id %></td>
        <td><%= (vendor_profile.created_at.strftime("%A %B %-d, %Y")) %></td>
        <td><%= vendor_profile.company_name %></td>
        <td><%= vendor_profile.city %></td>
        <td><%= vendor_profile.state %></td>
        <td><%= vendor_profile.telephone %></td>
        <td><%= vendor_profile.contact_name %></td>

        <td>
          <%= vendor_profile.company_profile_id %>
          <%= link_to 'Show', 
          company_profile_vendor_profile_path(@company_profile, 
          vendor_profile) %>
        </td>
        <td>
          <%= link_to 'Edit', 
          edit_company_profile_vendor_profile_path(@company_profile, 
          vendor_profile) %>
        </td>
        <td>
          <%= link_to 'Destroy', 
          company_profile_vendor_profile_path(@company_profile, vendor_profile), 
          method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vendor Profile', new_company_profile_vendor_profile_path %>
