<h1>Loads</h1>

<table class="table table-bordered table-striped table-condensed table-responsive">
  <thead>
    <tr>
      <th>ID</th>
      <th>Description</th>
      <th>Driver</th>
      <th>Status</th>
      <th>Load size</th>
      <th>Rate</th>
      <th>Distance</th>
      <th>Pick up time</th>
      <th>Delivery time</th>
    </tr>
  </thead>

  <tbody>

    <% @loads.each do |load|  %>

      <tr>
        <td>
          <%= link_to load do %>
          <%= load.id %>
          <% end %>
        </td>
        <td>
          <%= link_to load do %>
          <%= load.name %>
          <% end %>
        </td>
        <td>
          <%= link_to user_path(load.driver_user_id) do %>
            <%= load.driver_user.full_name %>
          <% end %>
        </td> 
        <td><%= load.status_name %></td>
        <td><%= load.load_size %></td>
        <td><%= load.rate %></td>
        <td><%= load.miles %></td>
        <td><%= (load.pick_up_time.strftime("%A %B %-d, %Y")) %></td>
        <td><%= (load.delivery_time.strftime("%A %B %-d, %Y")) %></td>
        <td><%= load.equipment_type %></td>

      </tr>

    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Load', new_load_path, 
  class: "btn btn-hrcprimary round btn-sm" %>
